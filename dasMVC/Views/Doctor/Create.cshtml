@model CreateDoctorModel
@{
    ViewData["Title"] = "Create Doctor";
}

<div class="row">
	<div class="col-4 offset-4">
		<h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
	</div>
</div>

<div class="row">
	<div class="col-4 offset-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger small"></div>
			<div class="form-group mb-3">
				<select asp-for="DepartmentId" class="form-select" asp-items="@ViewBag.Departments">
					<option>Department Name</option>
				</select>
				<span asp-validation-for="DepartmentId" class="text-danger"></span>
			</div>
			<div class="input-group mb-3">
				<input asp-for="DoctorName" class="form-control" placeholder="Doctor Name Surname" />
				<button type="submit" class="btn btn-primary"><i class="fa-solid fa-save me-2"></i>Save</button>
				<span asp-validation-for="DoctorName" class="text-danger small"></span>
			</div>
		</form>
	</div>
</div>


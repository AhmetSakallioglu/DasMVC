@model List<UserModel>
@{
	ViewData["Title"] = "Users";
}


<div class="container">
	<main role="main" class="pb-3">
		<div style="height:120px;">
		</div>
		<div class="row mb-3">
			<div class="col">
				<h1 class="display-4">Users</h1>
			</div>
			<div class="col-6 d-flex justify-content-end align-items-center">
				<a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2"></i>New User</a>
			</div>
		</div>



		<div class="row mb-3">
			<div class="col">
				<table class="table table-hover table-sm">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Full Name</th>
							<th scope="col">Username</th>
							<th scope="col">Locked</th>
							<th scope="col">Role</th>
							<th scope="col">Created At</th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var (index, user) in Model.Select((value, i) => (i + 1, value)))
						{
							<tr>
								<th scope="row">@index</th>
								<td>@user.FullName</td>
								<td>@user.Username</td>
								<td>
									@if (user.Locked)
									{
										<i class="fa fa-check text-success"></i>
									}
									else
									{
										<i class="fa fa-times text-danger"></i>
									}
								</td>
								<td>@user.Role</td>
								<td>@user.CreatedAt</td>
								<td class="text-end">
									<a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info btn-sm text-light"><i class="fa fa-edit me-2"></i>Edit</a>
									<a asp-action="Delete" asp-route-id="@user.Id"
									   onclick="return confirm('Are you sure want to delete this user : @user.Username ?')"
									   class="btn btn-danger btn-sm">
										<i class="fa fa-trash me-2"></i>Remove
									</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</main>
</div>




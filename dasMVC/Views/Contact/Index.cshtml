@{
    ViewData["Title"] = "Contacts Page";
    Layout = "_Layout";
}


<partial name="_SliderPartial" />


<section class="pt-5 pb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="wrapper">
                    <div class="row no-gutters">
                        <div class="col-lg-8 col-md-7 nopad order-md-last d-flex align-items-stretch">
                            <div class="contact-wrap w-100 p-md-5 p-4  bg-light">
                                <h3 class="mb-4">@_localization.Getkey("Location")</h3>
                                <div id="form-message-warning" class="mb-4"></div>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d773977.2607622304!2d29.910145592283328!3d40.73235264250271!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ccb5169652181b%3A0xeba807a5c78d9201!2sSakarya!5e0!3m2!1str!2str!4v1637339469959!5m2!1str!2str" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy" class="ftco-animate"></iframe>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-5 nopad d-flex align-items-stretch">
                            <div class="info-wrap bg-contact w-100 p-md-5 p-4">
                                <h3>Contacts</h3>
                                <!-- <p class="mb-4">We're open for any suggestion or just to have a chat</p> -->
                                <div class="dbox w-100 d-flex align-items-start mt-5 mb-5">
                                    <div class="icon d-flex align-items-center justify-content-center">
                                        <span class="fa fa-map-marker"></span>
                                    </div>
                                    <div class="text pl-3">
                                        <p><span>@_localization.Getkey("Address") </span>Sakarya Mahallesi Adapazarı Sokak ADAPAZARI/SAKARYA</p>
                                    </div>
                                </div>
                                <div class="dbox w-100 d-flex align-items-center mb-5">
                                    <div class="icon d-flex align-items-center justify-content-center">
                                        <span class="fa fa-phone"></span>
                                    </div>
                                    <div class="text pl-3">
                                        <p><span>@_localization.Getkey("Telephone") </span> <a href="tel://+901234567890?>">+901234567890</a></p>
                                    </div>
                                </div>
                                <div class="dbox w-100 d-flex align-items-center mb-5">
                                    <div class="icon d-flex align-items-center justify-content-center">
                                        <span class="fa fa-phone"></span>
                                    </div>
                                    <div class="text pl-3">
                                        <p><span>@_localization.Getkey("Fax") </span> <a href="tel://+901234567890">+901234567890</a></p>
                                    </div>
                                </div>
                                <div class="dbox w-100 d-flex align-items-center mb-5">
                                    <div class="icon d-flex align-items-center justify-content-center">
                                        <span class="fa fa-paper-plane"></span>
                                    </div>
                                    <div class="text pl-3">
                                        <p><span>Email </span> <a href="mailto:doctor@appointment.com">doctor@appointment.com</a></p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
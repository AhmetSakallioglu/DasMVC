@model List<AppointmentViewModel>
@{
	ViewData["Title"] = "Appointments";
}


<div class="row mb-3">
	<div class="col">
		<h1 class="display-4">@_localization.Getkey("Appointments")</h1>
	</div>
</div>

<div class="row mb-3">
	<div class="col">
		<table class="table table-hover table-sm">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">@_localization.Getkey("DoctorName")</th>
					<th scope="col">@_localization.Getkey("Department2")</th>
					<th scope="col">@_localization.Getkey("Date")</th>
					<th scope="col">@_localization.Getkey("Time")</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var (index, appointment) in Model.Select((value, i) => (i + 1, value)))
				{



					<tr>
						<th scope="row">@index</th>
						<td>@appointment.Doctor.DoctorName</td>
						<td>@appointment.Department.DepartmentName</td>
						<td>@appointment.Date.ToString("dd.MM.yyyy")</td>
						<td>@appointment.Time</td>
						<td class="text-end">
							<a class="btn btn-success text-light" asp-action="RandevuOlustur" asp-route-id="@appointment.AppointmentId">
								<i class="fa fa-check me-2" aria-hidden="true"></i>

								@_localization.Getkey("SelectAppointment")
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
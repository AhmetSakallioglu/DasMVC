@model List<AppointmentViewModel>
@{
	ViewData["Title"] = "Appointments";
}


<div class="row mb-3">
	<div class="col">
		<h1 class="display-4">Appointments</h1>
	</div>
	<div class="col-6 d-flex justify-content-end align-items-center">
		<a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2"></i>New Appointments</a>
	</div>
</div>

<div class="row mb-3">
	<div class="col">
		<table class="table table-hover table-sm">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Doctor Name</th>
					<th scope="col">Department Name</th>
					<th scope="col">Date</th>
					<th scope="col">Time</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var (index, appointment) in Model.Select((value, i) => (i + 1, value)))
				{

					<tr>
						<th scope="row">@index</th>
						<td>@appointment.Doctor.DoctorName</td>
						<td>@appointment.Department.DepartmentName</td>
						<td>@appointment.Date</td>
						<td>@appointment.Time</td>
						<td class="text-end">

							<a asp-action="Delete" asp-route-id="@appointment.Date"
							   onclick="return confirm('Are you sure want to delete this appointment : @appointment.Date ?')"
							   class="btn btn-danger btn-sm">
								<i class="fa fa-trash me-2"></i>Remove
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
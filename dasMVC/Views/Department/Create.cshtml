@model CreateDepartmentModel
@{
	ViewData["Title"] = "Create Department";
}


<div class="row">
	<div class="col-4 offset-4">
		<h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
	</div>
</div>

<div class="row">
	<div class="col-4 offset-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger small"></div>

			<div class="form-group mb-3">
				<label asp-for="DepartmentName" class="form-label">Department Name</label>
				<input asp-for="DepartmentName" class="form-control" placeholder="Deri Hastalıkları" />
				<span asp-validation-for="DepartmentName" class="text-danger small"></span>
			</div>

			<div class="form-group mb-3">
				<button type="submit" class="btn btn-primary"><i class="fa-solid fa-save me-2"></i>Save</button>
			</div>
		</form>
	</div>
</div>